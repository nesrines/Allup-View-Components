@model IEnumerable<Product>

<div class="tab-pane active">
    <div class="row">
        @foreach (Product product in Model)
        {
            <div class="product-col col-md-4 col-sm-6">
                <div class="single-product mt-30">
                    <div class="product-image">
                        <a href="single-product.html">
                            <img class="first-image" src="~/assets/images/product/@product.MainImage" alt="product">
                            <img class="second-image" src="~/assets/images/product/@product.HoverImage" alt="product">
                        </a>
                        <ul class="product-meta">
                            <li><a class="basket-btn" asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id"><i class="icon ion-bag"></i></a></li>
                            <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                            <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                            <li><a class="modal-btn" asp-controller="Product" asp-action="Modal" asp-route-id="@product.Id" data-toggle="modal" data-target="#productQuickModal"><i class="icon ion-android-open"></i></a></li>
                        </ul>
                        @if (product.DiscountedPrice > 0)
                        {
                            <span class="discount-product">-@Math.Round((decimal)((product.Price - product.DiscountedPrice) / product.Price * 100))%</span>
                        }
                    </div>
                    <div class="product-content">
                        <ul class="product-rating">
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                        </ul>
                        <h4 class="product-title"><a href="single-product.html">@product.Title</a></h4>
                        <div class="product-price">
                            @if (product.DiscountedPrice > 0)
                            {
                                <span class="regular-price">€@product.Price</span>
                                <span class="price-sale">€@product.DiscountedPrice</span>
                            }
                            else
                            {
                                <span class="price-sale">€@product.Price</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>